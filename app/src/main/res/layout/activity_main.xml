<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="h-list"
            android:id="@+id/hlist"
            android:padding="5dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v-list"
            android:id="@+id/vlist"
            android:padding="5dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="h-gridview"
            android:id="@+id/hgridview"
            android:padding="5dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v-gridview"
            android:id="@+id/vgridview"
            android:padding="5dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="h-stagg"
            android:id="@+id/hstagg"
            android:padding="5dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v-stagg"
            android:id="@+id/vstagg"
            android:padding="5dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/swipe_layout">

        <com.yitu8.testrecycleview.MyRecycleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview1"
            android:visibility="gone"/>

        <com.yitu8.testrecycleview.MyRecycleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview2"
            android:visibility="gone"/>

        <com.yitu8.testrecycleview.MyRecycleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview3"
            android:visibility="gone"/>

        <com.yitu8.testrecycleview.MyRecycleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview4"
            android:visibility="gone"/>

        <com.yitu8.testrecycleview.MyRecycleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview5"
            android:visibility="gone"/>

        <com.yitu8.testrecycleview.MyRecycleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview6"
            android:visibility="gone"/>

    </RelativeLayout>
</LinearLayout>
